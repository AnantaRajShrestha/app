   <title><%=title%></title>
</head>
<body >
    
    <%- include ('partials/nav.ejs'); -%>
   
   
    

    <div class="container my-5">
        <fieldset style="border:1px solid teal;border-radius:4px;width:75%;margin:auto;">
    <form action="/update/" id="my-form" name="myForm"  method="post">
        <div class="form-group">

        
            <label for="username" class="col-md-3 contol-label" >&nbsp;</label>
            <div class="col-md-9">
            <input type="hidden" class="form-control" value="<%=records._id%>"  name="id" id="id" required>
        </div>
     <div class="form-group">

        
        <label for="username" class="col-md-3 contol-label" >Username:</label>
        <div class="col-md-9">
        <input class="form-control" placeholder="Full Name" value="<%=records.name%>" type="text" name="username" id="username" required>
    </div>
     </div>
          
      
     <div class="form-group">
        <label class="col-md-3 contol-label" for="email" >Email:</label>
        <div class="col-md-12">
        <input class="form-control" placeholder="email" value="<%=records.email%>" type="email" name="email" id="email" required>
        </div>
     </div>
     <div class="form-group">
        <label class="col-md-3 contol-label" for="email" >Phone:</label>
        <div class="col-md-12">
        <input class="form-control"  placeholder="phone" value="<%=records.phone%>" type="phone" name="phone" id="phone" required>
        </div>
     </div>
        <div class="form-group">
        <label class="col-md-3 control-label"for="password" >Password:</label>
        <div class="col-md-12">
        <input  class="form-control" placeholder="password"  value="<%=records.password%>" type="password" name="password" id="password"required><br>
        </div>
    </div>
    <div class="col-md-12">
        <input class="btn btn-outline-primary"type="submit" value="Submit" name="submit" id="submit">
       </div>
    </form>
 
</div>
</fieldset>
<%- include ('partials/footer.ejs'); -%>
</body>
</html>